// FOR LOOPS
// iterate through the numbers array and add the value of the numbers array to total
let numbers = [2, 3, 4, 5, 6];

// declare and intialize total to = 0
let total = 0;

for (let i = 0; i < numbers.length; i++) {
    total += numbers[i]; // adding each array element to total
};

console.log(total);


// WHILE LOOPS
let num = 0;

while (num < 10) {
    console.log(num)
    num++; // increment
}

console.log(num)

// add numbers to an empty array
let nums = []; // create a empty array
let i = 1; // create a variable i to 1

while (i < 10) {
    nums.push(i); // add the numbers to the nums array
    i++ // increment
};

console.log(nums);
