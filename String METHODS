let str = "Hello";
console.log(str);

let str1 = "World"
console.log(str1);
let newStr = str += str1;

console.log(newStr);

// returns the string length
console.log(newStr.length);

// return first character in a string
console.log(newStr.charAt(0))

// return last character in a string
console.log(newStr.charAt(newStr.length -1))

let one = 'One';

let two = 'Two';

// concat() joins two or more string
let oneTwo = one.concat(two);

console.log(oneTwo);

// returns a boolean if a string endsWith() a specified value
console.log(newStr.endsWith("World")); // true
console.log(newStr.endsWith("world")); // false

// returns a boolean if a string contains a specified value
console.log(newStr.includes('hello')); // false
console.log(newStr.includes('Hello')); // true

// returns the position of the first occurrence of a specified value in a string.
console.log(newStr.indexOf("World")); // index: 5
console.log(newStr.indexOf("H")); // index: 0


let message = "i welcome you to my business, this is my business and i welcome you";

// returns the position of the last occurrence of a specified value in a string.
console.log(message.lastIndexOf("welcome")); // index: 56

// returns a new string with a specified number of copies of the string it was called on.
console.log(newStr.repeat(2));

// searches a string for a specified value, or a regular expression, and returns a new string where the specified values are replaced.
console.log(message.replace("welcome", "bring")); // replace "welcome" with "bring"

// searches a string for a specified value, and returns the position of the match.
console.log(newStr.search("World")); // returns: 5

// extracts parts of a string and returns the extracted parts in a new string.
console.log(newStr.slice(0, 5)); // returns: "Hello"

// splits a string into an array of substrings, and returns the new array.
console.log(newStr.split(""));// ["H", "e", "l", "l", "o", "W", "o", "r", "l", "d"]

// returns a boolean if a string startsWith() a specified value
console.log(newStr.startsWith('Hello')); // true
console.log(newStr.startsWith('hello')); // false
